#!/bin/sh -ef

mkdir -p \
    "$1/usr/bin" \
    "$1/usr/share/doc/kiss/init"

cp -R etc "$1"
cp -R lib "$1/usr/lib"

# Disable warning as CFLAGS must work this way.
# shellcheck disable=2086
for bin in kpow respawn; do
    "$CC" -o "$1/usr/bin/$bin" "bin/$bin.c" $CFLAGS $CPPFLAGS -static $LDFLAGS
    cp -f "bin/$bin.c" "$1/usr/share/doc/kiss/init/$bin.c"
done

ln -sf rc.shutdown "$1/usr/lib/init/rc.reboot"
ln -sf rc.shutdown "$1/usr/lib/init/rc.poweroff"
